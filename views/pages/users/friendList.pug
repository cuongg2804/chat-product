extends ../../layouts/default.pug
include ../../mixins/box_head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug

    .row
      .col-12
        +box_head("Danh sách bạn bè")

    .row(data-users-friend=user.id)
      each friend in friendList
        .col-6(user-id=friend.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src="https://robohash.org/hicveldicta.png"
                alt=friend.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{friend.fullName}
              div(class="inner-buttons")
                a(
                  href=`/${friend.room_chat_id}`
                  class="btn btn-sm btn-primary mr-1"
                ) Nhắn tin
              div(
                class="inner-status"
                status=friend.statusOnline
              ) <i class="fa-solid fa-circle"></i>